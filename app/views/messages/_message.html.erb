<div id="message-<%= message.id %>" class="message-container <%= message.user == current_user ? 'message-right' : 'message-left' %>">

    <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
    <strong class="user-name" style="color:<%= message.user.color %> "><%= message.user.username %></strong>
  <p><%= message.content %></p>
</div>